#!/usr/bin/env ruby

$:.unshift File.expand_path("../../lib", __FILE__)
require "language_pack"
require "language_pack/skylight"

skylight do
  Skylight.trace 'detect', 'app.detect' do
    if pack = LanguagePack.detect(ARGV.first)
      puts pack.name
      exit 0
    else
      puts "no"
      exit 1
    end
  end
end
